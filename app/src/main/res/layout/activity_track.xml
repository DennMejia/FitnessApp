<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrackActivity"
    android:background="@color/teal_200">


    <TextView
        android:id="@+id/textViewTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:fontFamily="sans-serif-black"
        android:text="00:00"
        android:textColor="@android:color/black"
        android:textSize="80sp"
        android:typeface="serif" />

    <TextView
        android:id="@+id/Calories"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_alignTop="@+id/textViewCalories"
        android:layout_alignEnd="@+id/textViewCalories"
        android:layout_alignBottom="@+id/textViewCalories"
        android:layout_marginTop="66dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="-41dp"
        android:text="Calories"
        android:textSize="15dp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/buttonStartPause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="74dp"
        android:layout_marginBottom="98dp"
        android:backgroundTint="@color/teal_200"
        android:onClick="PauseButton"
        android:tint="@color/black"
        app:srcCompat="@drawable/ic_baseline_play_circle_filled_24" />

    <ImageButton
        android:id="@+id/StopButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="99dp"
        android:backgroundTint="@color/teal_200"
        android:onClick="StopButton"
        android:tint="@color/black"
        app:srcCompat="@drawable/ic_baseline_stop_circle_24" />

    <TextView
        android:id="@+id/Time"
        android:layout_width="61dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textViewTimer"
        android:layout_alignBottom="@+id/textViewTimer"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="172dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="178dp"
        android:layout_marginBottom="-48dp"
        android:text="Time"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewCalories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="334dp"
        android:layout_marginEnd="55dp"
        android:fontFamily="sans-serif-black"
        android:text="0"
        android:textColor="@android:color/black"
        android:textSize="40dp" />


</RelativeLayout>